<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context=".fragments.WinScreenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/winDescribtion"
            android:layout_width="638dp"
            android:layout_height="match_parent"
            android:text="@string/and_the_winner_is"
            android:textAlignment="viewStart"
            android:textSize="60sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/endWholeGameBTN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:text="@string/end_game"
            android:textColor="@color/purple_700" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1. Place"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/nameFirstPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/first_place"
            android:text="Player 1"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/moneyFirstPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/secondPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2. Place"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/nameSecondPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/second_place"
            android:text="Player 2"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/moneySecondPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thirdPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3. Place"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/nameThirdPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/third_place"
            android:text="Player 3"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/moneyThirdPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fourthPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4. Place"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/nameFourthPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fourth_place"
            android:text="Player 4"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/moneyFourthPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>