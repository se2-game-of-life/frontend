<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/background1"
    android:layout_height="match_parent"
    tools:context="se.group3.gameoflife.frontend.activities.LobbyActivity">

    <ImageView
        android:id="@+id/buttonReturnToLobby"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:src="@drawable/button_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/player1Button"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background_player1"
        android:fontFamily="@font/inter_extra_bold"
        android:fontWeight="800"
        android:text="@string/player1"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252" />

    <Button
        android:id="@+id/player3Button"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background_player3"
        android:fontFamily="@font/inter_extra_bold"
        android:fontWeight="800"
        android:text="@string/player3"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713" />

    <Button
        android:id="@+id/player4Button"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background_player4"
        android:fontFamily="@font/inter_extra_bold"
        android:fontWeight="800"
        android:text="@string/player4"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />

    <Button
        android:id="@+id/player2Button"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background_player2"
        android:fontFamily="@font/inter_extra_bold"
        android:fontWeight="800"
        android:text="@string/player2"
        android:textColor="@android:color/white"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/button_background_start"
        android:fontFamily="@font/inter_extra_bold"
        android:fontWeight="800"
        android:text="@string/start"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="362dp"
        android:layout_height="162dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.244" />

    <TextView
        android:id="@+id/lobbyID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ID0000"
        android:textColor="#F4F2F2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

</androidx.constraintlayout.widget.ConstraintLayout>