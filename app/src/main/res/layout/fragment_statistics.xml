<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatisticsFragments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spieler 1" />

        <Button
            android:id="@+id/button_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spieler 2" />

        <Button
            android:id="@+id/button_player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spieler 3" />

        <Button
            android:id="@+id/button_player4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spieler 4" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>